{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=parking.db"
  },

  "Jwt": {
    "Key": "THIS_IS_A_VERY_SECRET_KEY_123456789",
    "Issuer": "ParkingManagementAPI",
    "Audience": "ParkingManagementClient"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "shared": true
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
