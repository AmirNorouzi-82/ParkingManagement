{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ParkingManagementDb;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },

  "Jwt": {
    "Issuer": "ParkingManagement.API",
    "Audience": "ParkingManagement.API.Client",
    "Key": "THIS_IS_A_VERY_LONG_SECRET_KEY_CHANGE_ME_12345",
    "ExpiryMinutes": 60
  },

  "AllowedHosts": "*"
}
